<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        app:cardBackgroundColor="#F8F8FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="TODO"
            android:src="@drawable/ic_back_without_rect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Стандартная уборка"
            android:textColor="@color/color_text"
            android:textSize="@dimen/_16ssp" />

        <TextView
            android:id="@+id/tvRoomToiletTimePriceAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/montserrat"
            tools:text="1 Комната, 1 Санузел, 4 часа, 1290 ₽"
            android:textSize="@dimen/_12ssp" />

        <ImageButton
            android:id="@+id/infoAdress"
            android:background="?android:selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:src="@drawable/ic_entypo_info_with_circle" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_toolbar_titles_payment" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Выберите способ оплаты"
            android:textColor="@color/color_text"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/_20ssp" />

        <ImageButton
            android:id="@+id/money_to_cleaner_btn"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:foreground="@drawable/ic_rect_money_to_cleaner" />

        <ImageButton
            android:id="@+id/card_to_cleaner_btn"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:foreground="@drawable/ic_rect_card_to_cleaner" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Или"
            android:layout_gravity="center"
            android:textColor="@color/second_text_color"
            android:textSize="@dimen/_12ssp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apple_pay_to_cleaner_btn"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:foreground="@drawable/image_apple_pay" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_pay_to_cleaner_btn"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:foreground="@drawable/image_google_pay" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>